@model IEnumerable<BookLibrary.Models.Library>

@{
    ViewData["Title"] = "GetBookByTitle";
}

<h2>Books by Title</h2>

@if (Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Author</th>
                <th>Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var book in Model)
            {
                <tr>
                    <td>@book.Id</td>
                    <td>@book.Name</td>
                    <td>@book.Author</td>
                    <td> @book.Price</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No books found with the specified title.</p>
}
